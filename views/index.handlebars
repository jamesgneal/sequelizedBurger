<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Burgers to eat</h4>
                <h6 class="card-subtitle mb-2 text-muted text-center">Hit the button after you polish off these burgs</h6>
                <table class="table table-striped">
                    <tbody>
                        {{#each burgers}} {{#unless devoured}}
                        <tr>
                            <td>{{burger_name}}</td>
                            <td>
                                <button class="change-devour btn btn-outline-dark btn-sm" data-id="{{id}}" data-newdevour="1">
                                    DEVOUR IT
                                </button>
                            </td>
                        </tr>
                        {{/unless}} {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Burgers I've eaten</h4>
                <h6 class="card-subtitle mb-2 text-muted text-center">These burgs have been devoured</h6>
                <table class="table table-striped">
                    <tbody>
                        {{#each burgers}} {{#if devoured}}
                        <tr>
                            <td>{{burger_name}}</td>
                        </tr>
                        {{/if}} {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col text-center">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-center">Add a Burger</h4>
                <form class="create-form">
                    <div class="form-group">
                        <input type="text" id="ba" size="50" name="name" placeholder="Enter the burger's name">
                    </div>
                    <button class="btn btn-success" type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>